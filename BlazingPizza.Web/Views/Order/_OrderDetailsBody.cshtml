@using BlazingPizza
@{ 
    var orderWithStatus = Model as OrderWithStatus;
}
<div class="track-order-body">
    <div class="track-order-details">
        @foreach (var pizza in orderWithStatus.Order.Pizzas)
        {
            <p>
                <strong>
                    @(pizza.Size)"
                    @pizza.Special.Name
                    ($@pizza.GetFormattedTotalPrice())
                </strong>
            </p>

            <ul>
                @foreach (var topping in pizza.Toppings)
                {
                    <li>+ @topping.Topping.Name</li>
                }
            </ul>
        }

        <p>
            <strong>
                Total price:
                $@orderWithStatus.Order.GetFormattedTotalPrice()
            </strong>
        </p>
    </div>
    <div id="preparing-pizza" style="display:none;">
        <img src="~/img/aecc849a13648cbd773cef883cbd1eda.gif"  style="width:80%"/>
    </div>
    <div id="delivered-pizza" style="display:none">
        <img src="~/img/drone-pizza-delivery.png" style="width:80%"/>
    </div>
    <div class="track-order-map">
        <div id="order-map" style="height: 100%; width: 100%;"></div>
    </div>
</div>